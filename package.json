{
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "start": "npm run bootstrap && npm run watch",
    "watch": "lerna run watch --parallel",
    "build": "npm run clean && lerna run build",
    "build-preview": "npm run build && lerna run build-preview",
    "clean": "rimraf packages/*/dist",
    "reset": "npm run clean && lerna clean --yes",
    "test": "cross-env NODE_ENV=test jest --no-cache",
    "dryrun": "lerna publish --skip-npm --skip-git",
    "publish": "npm run bootstrap && npm run dryrun && npm run build && git checkout . && lerna publish",
    "format": "npm run lint-fix & prettier --loglevel warn --write \"{{packages,scripts}/**/,}*.{js,css,md,json}\"",
    "lint": "npm run lint:css & npm run lint:js",
    "lint-fix": "npm run lint:css -- --fix & npm run lint:js -- --fix",
    "lint:css": "stylelint \"packages/**/*.{css,js}\"",
    "lint:js": "eslint --ignore-path .gitignore \"{{packages,scripts}/**/,}*.js\"",
    "add-contributor": "all-contributors add"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
    "@babel/plugin-proposal-export-default-from": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "all-contributors-cli": "^4.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-emotion": "^9.2.4",
    "babel-plugin-inline-svg": "^1.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "cross-env": "^5.1.4",
    "deep-equal": "^1.0.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^5.2.0",
    "eslint-plugin-react": "^7.10.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "jest": "^23.4.0",
    "jest-cli": "^23.4.0",
    "lerna": "^2.11.0",
    "prettier": "^1.13.7",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "svg-inline-loader": "^0.8.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "dependencies": {
    "jest-emotion": "^9.2.6"
  }
}